<!DOCTYPE html>
<html>
<head>
    <title>Scraping Report - {{ meta.url }}</title>
    <style>
        body { font-family: sans-serif; padding: 20px; color: #333; }
        .header { background: #f4f4f4; padding: 20px; border-radius: 8px; }
        .stats { display: flex; gap: 20px; margin-top: 20px; }
        .stat-box { background: #e9ecef; padding: 15px; border-radius: 5px; flex: 1; text-align: center; }
        .stat-value { font-size: 24px; font-weight: bold; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background: #007bff; color: white; }
    </style>
</head>
<body>
    <div class="header">
        <h1>ScrapeWizard Report</h1>
        <p>Target: <a href="{{ meta.url }}">{{ meta.url }}</a></p>
        <p>Generated: {{ meta.generated_at }}</p>
    </div>

    <div class="stats">
        <div class="stat-box">
            <div class="stat-value">{{ stats.rows_extracted }}</div>
            <div>Rows Extracted</div>
        </div>
        <div class="stat-box">
            <div class="stat-value">{{ stats.duration_seconds }}s</div>
            <div>Duration</div>
        </div>
        <div class="stat-box">
            <div class="stat-value">{{ stats.error_count }}</div>
            <div>Errors</div>
        </div>
    </div>

    <h2>Sample Data</h2>
    <table>
        <thead>
            <tr>
                {% if sample_data %}
                {% for key in sample_data[0].keys() %}
                <th>{{ key }}</th>
                {% endfor %}
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for row in sample_data %}
            <tr>
                {% for value in row.values() %}
                <td>{{ value }}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
